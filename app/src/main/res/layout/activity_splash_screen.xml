<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/banner"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/my_omoshiroi"
            app:srcCompat="@raw/banner_omoshiroi" />
        <ImageView
            android:id="@+id/loading"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/my_omoshiroi"
            app:srcCompat="@raw/splash_screen_loading" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:hint="Version"
        android:textColor="#004455"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textAlignment="center"
        android:text="Note: This gamify app is still in development"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/dark_red"
        android:textStyle="bold" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>