<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayoutPowerUps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/switchbackground"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Add 1 minute"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true">
                    <TextView
                        android:id="@+id/timerAddOneMinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:layout_alignEnd="@id/powerUp1"
                        android:textColor="@color/forest_green"
                        android:textSize="20sp"
                        android:fontFamily="@font/bauhaus_regular"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/powerUp1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/user_profile"
                        app:srcCompat="@raw/timer_addonemin" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_buyAdd"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded1"
                        android:text="500"
                        android:textColor="@color/white_smoke"
                        android:textSize="12sp"
                        android:fontFamily="@font/bauhaus_regular"
                        app:icon="@raw/ocoins"
                        app:iconSize="20dp"
                        app:iconTint="@null"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/forest_green" />
                    <Button
                        android:id="@+id/btn_buyAddInfo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_info"
                        app:backgroundTint="@color/forest_green" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/switchbackground"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Freeze Timer"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true">
                    <TextView
                        android:id="@+id/timerFreezeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:layout_alignEnd="@id/powerUp2"
                        android:textColor="@color/forest_green"
                        android:fontFamily="@font/bauhaus_regular"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/powerUp2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/user_profile"
                        app:srcCompat="@raw/timer_freeze" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_buyFreeze"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded1"
                        android:text="800"
                        android:fontFamily="@font/bauhaus_regular"
                        android:textColor="@color/white_smoke"
                        android:textSize="12sp"
                        app:icon="@raw/ocoins"
                        app:iconSize="20dp"
                        app:iconTint="@null"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/forest_green" />
                    <Button
                        android:id="@+id/btn_buyFreezeInfo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_info"
                        app:backgroundTint="@color/forest_green" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/switchbackground"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:translationZ="2dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Stop Timer"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true">
                    <TextView
                        android:id="@+id/timerStopCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:layout_alignEnd="@id/powerUp3"
                        android:textColor="@color/forest_green"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/powerUp3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/user_profile"
                        app:srcCompat="@raw/timer_stop" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"
                    android:fontFamily="@font/bauhaus_regular"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_buyStop"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded1"
                        android:text="1200"
                        android:fontFamily="@font/bauhaus_regular"
                        android:textColor="@color/white_smoke"
                        android:textSize="12sp"
                        app:icon="@raw/ocoins"
                        app:iconSize="20dp"
                        app:iconTint="@null"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/forest_green" />
                    <Button
                        android:id="@+id/btn_buyStopInfo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_info"
                        app:backgroundTint="@color/forest_green" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>