<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="50dp"
    android:paddingEnd="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/switchbackground"
        android:gravity="center"
        android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:fitsSystemWindows="true">
                <ImageView
                    android:id="@+id/avatarTop1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="10dp"
                    android:contentDescription="@string/user_profile"
                    app:srcCompat="@raw/profile" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@id/avatarTop1"
                    android:layout_centerInParent="true"
                    android:background="@raw/una"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textViewNameTop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Name"
                android:textSize="22sp"
                android:maxLines="1"
                android:textColor="#E91E63"
                android:fontFamily="@font/bauhaus_regular"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewXpTop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:hint="xp"
                android:textAllCaps="false"
                android:textColor="@color/forest_green"
                android:fontFamily="@font/bauhaus_regular"
                android:textSize="20sp"/>
        </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>