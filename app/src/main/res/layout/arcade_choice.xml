<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/closeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_close"
                app:backgroundTint="#000000" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@raw/play_arcade" />
            <Button
                android:id="@+id/btn_HelpPlayArcade"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:backgroundTint="#000000"
                android:gravity="center_horizontal"
                android:background="@drawable/ic_help_outline" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@raw/topic_difficulty">
            <Button
                android:id="@+id/topicDifficultyButton"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:foreground="@raw/topic_difficulty" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@raw/story_mode">
            <Button
                android:id="@+id/storymodeButton"
                android:layout_width="250dp"
                android:layout_height="110dp"
                android:background="#00FFFFFF"
                android:foreground="@raw/story_mode" />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>