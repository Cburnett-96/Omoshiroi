<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    tools:context=".TestingAlgorithm">

    <TextView
        android:id="@+id/title"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Testing Activity \n(Algorithm Implementation)"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="48dp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="@null"
        android:ems="10"
        android:hint="Type something here..."
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="100"
        android:maxLines="5"
        android:textColor="#273746"
        android:textColorHint="#273746"
        android:textCursorDrawable="@null"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/CK_btn"
        android:layout_alignStart="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_marginTop="50dp"
        android:text="Did you mean...?"
        android:textColor="#273746"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="224dp" />

    <Button
        android:id="@+id/CK_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignStart="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_centerVertical="true"
        android:enabled="false"
        android:background="@drawable/rounded1"
        android:fontFamily="@font/bauhaus_regular"
        android:onClick="btn_check"
        android:text="SPELL"
        android:textColor="@color/white_smoke"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/output"
        android:layout_centerHorizontal="true"
        android:text="HIGHLIGHT ISSUES:"
        android:fontFamily="serif"
        android:textColor="#626567" />

    <TextView
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Note1"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textColor="#626567" />

    <Button
        android:id="@+id/CLEAR_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignBaseline="@+id/CK_btn"
        android:layout_alignEnd="@+id/title"
        android:layout_alignRight="@+id/title"
        android:layout_alignBottom="@+id/CK_btn"
        android:enabled="false"
        android:background="@drawable/rounded1"
        android:fontFamily="@font/bauhaus_regular"
        android:onClick="btn_clear"
        android:text="Clear"
        android:textColor="@color/white_smoke"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/CORRECT_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="-5dp"
        android:layout_alignBottom="@+id/CK_btn"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:background="@drawable/rounded1"
        android:fontFamily="@font/bauhaus_regular"
        android:onClick="btn_correct"
        android:text="GRAMMAR"
        android:textColor="@color/white_smoke"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CK_btn"
        android:layout_alignStart="@+id/CK_btn"
        android:layout_alignLeft="@+id/CK_btn"
        android:layout_marginTop="22dp"
        android:textColor="#273746"
        android:textSize="18dp" />

    <Button
        android:id="@+id/RECORD_btn"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CK_btn"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded1"
        android:fontFamily="@font/bauhaus_regular"
        android:onClick="btn_record"
        android:text="LOAD DATA FIRST"
        android:textColor="@color/white_smoke"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linearLoadingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/loading"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/my_omoshiroi"
                app:srcCompat="@raw/splash_screen_loading" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="If you're stuck here, Please wait a moment..."
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>